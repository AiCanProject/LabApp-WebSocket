<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table_border"
        tools:ignore="UselessParent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sNo"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textSize="@dimen/ph_log_item_size"
                android:background="@color/white"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/date"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="0"
                android:textSize="@dimen/ph_log_item_size"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/time"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:textSize="@dimen/ph_log_item_size"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/phLog"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:textSize="@dimen/ph_log_item_size"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:baselineAligned="false"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tempLog"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:textSize="@dimen/ph_log_item_size"
                android:background="@color/white"
                android:baselineAligned="false"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/compound"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:textSize="@dimen/ph_log_item_size"

                android:background="@color/white"
                android:baselineAligned="false"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/batchnum"
                style="@style/table_row_item"
                android:textSize="@dimen/ph_log_item_size"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:baselineAligned="false"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/arnum"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:baselineAligned="false"
                android:textSize="@dimen/ph_log_item_size"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/unknown1"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:textSize="@dimen/ph_log_item_size"
                android:baselineAligned="false"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/unknown2"
                style="@style/table_row_item"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:baselineAligned="false"
                android:textAlignment="center"
                android:textSize="@dimen/ph_log_item_size"

                android:textColor="@color/black" />
        </TableRow>
    </TableLayout>
</LinearLayout>
