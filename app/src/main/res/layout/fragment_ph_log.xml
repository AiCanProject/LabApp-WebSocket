<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.5">

            <androidx.cardview.widget.CardView
                android:id="@+id/phLevelCard"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:backgroundTint="@color/white"
                android:elevation="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.aican.aicanapp.ph.phAnim.PhView
                        android:id="@+id/phView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:vertical="true" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.4" />


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="pH"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/phView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPhCurr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="18dp"
                        android:text="7.4"
                        android:textColor="@color/black"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textView4"
                        app:layout_constraintStart_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" />

                    <TextView
                        android:id="@+id/tvPhNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="18dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="42sp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textView4"
                        app:layout_constraintStart_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="3"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/known01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:minWidth="100dp"
                    android:text="Product"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableEnd="@drawable/ic_edit_btn"
                    android:textSize="14dp" />

                <Spinner
                    android:id="@+id/productSpinner"
                    android:layout_width="200dp"
                    android:layout_weight="3"
                    android:layout_height="45dp"
                    android:background="@drawable/update_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <EditText

                        android:id="@+id/compound_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:hint="@string/enter_compound_name"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="15dp" />

                </com.google.android.material.card.MaterialCardView>

                <ImageButton
                    android:id="@+id/enter_text"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_play_arrow"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/known02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="Batch"
                    android:minWidth="100dp"
                    android:drawablePadding="5dp"
                    android:drawableEnd="@drawable/ic_edit_btn"
                    android:textSize="14dp"  />

                <Spinner
                    android:id="@+id/batchSpinner"
                    android:layout_width="200dp"
                    android:layout_weight="3"
                    android:layout_height="45dp"
                    android:background="@drawable/update_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <EditText
                        android:id="@+id/batch_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:hint="Enter Batch Number"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="15dp" />

                </com.google.android.material.card.MaterialCardView>

                <ImageButton
                    android:id="@+id/batch_text"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_play_arrow"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/known03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="AR"
                    android:layout_weight="1"
                    android:minWidth="100dp"
                    android:drawablePadding="5dp"
                    android:drawableEnd="@drawable/ic_edit_btn"
                    android:textSize="14dp"  />

                <Spinner
                    android:id="@+id/arSpinner"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:background="@drawable/update_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <EditText
                        android:id="@+id/ar_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:hint="Enter AR Number"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="15dp" />

                </com.google.android.material.card.MaterialCardView>

                <ImageButton
                    android:id="@+id/ar_text"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_play_arrow"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/unknownHeading01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Unknown"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableEnd="@drawable/ic_edit_btn"
                    android:textSize="14dp"  />

                <Spinner
                    android:id="@+id/unknownSpinner1"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:background="@drawable/update_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/unknownHeading02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Unknown"
                    android:layout_weight="1"
                    android:minWidth="100dp"
                    android:drawablePadding="5dp"
                    android:drawableEnd="@drawable/ic_edit_btn"
                    android:textSize="14dp"  />

                <Spinner
                    android:id="@+id/unknownSpinner2"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:background="@drawable/update_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/refreshList"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_margin="4dp"
                    android:text="Refresh List"
                    android:textSize="10dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/logBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:backgroundTint="#3CEA43"
                android:text="@string/log"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/export"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="@string/export"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/print"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="Print PDF"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/printCSV"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="Print CSV"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/printGraph"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="Print Graph"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="visible" />


        </LinearLayout>
        <!--gone-->
        <TextView
            android:id="@+id/logCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:text="Clear Logs"
                android:background="@drawable/red_circle"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/autoLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="#F3F3F3"
                app:cardCornerRadius="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchHold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="@string/log_on_stable"
                            android:textColor="@color/grey_dark"
                            android:textSize="16dp"
                            android:theme="@style/Switch" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchBtnClick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:text="@string/log_on_button_click"
                            android:textColor="@color/grey_dark"
                            android:textSize="16dp"
                            android:theme="@style/Switch" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchInterval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:text="@string/log_at_interval"
                            android:textColor="@color/grey_dark"
                            android:textSize="16dp"
                            android:theme="@style/Switch" />


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/timer_cloud_layout"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="4dp"
                            app:cardCornerRadius="10dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp">

                            <EditText
                                android:id="@+id/EnterTime"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:hint="Enter time (min)"
                                android:inputType="numberDecimal"
                                android:textColor="#000"
                                android:textColorHint="#000"
                                android:textSize="15dp"
                                android:visibility="visible" />

                            <ImageButton
                                android:id="@+id/sumbit_timer"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="end"
                                android:background="@color/orange"
                                android:src="@drawable/ic_play_arrow"
                                android:visibility="visible" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/log_interval_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="22dp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/table_heading_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/table_border">

                <TableRow tools:ignore="UselessParent">

                    <TextView
                        style="@style/table_header"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="S.No."
                        android:textAlignment="center" />

                    <TextView
                        style="@style/table_header"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="@string/date"
                        android:textAlignment="center" />

                    <TextView
                        style="@style/table_header"
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="@string/time"
                        android:textAlignment="center" />

                    <TextView
                        style="@style/table_header"
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:text="@string/ph"
                        android:textAlignment="center"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        style="@style/table_header"
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:text="@string/temp"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/known1"
                        style="@style/table_header"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:drawableEnd="@drawable/ic_edit_btn"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:text="Product"
                        android:textAlignment="center"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/known2"
                        style="@style/table_header"
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:drawableEnd="@drawable/ic_edit_btn"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:text="Batch No"
                        android:textAlignment="center"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/known3"
                        style="@style/table_header"
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:drawableEnd="@drawable/ic_edit_btn"
                        android:paddingEnd="5dp"
                        android:text="AR No"
                        android:textAlignment="center"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/unknownHeading1"
                        style="@style/table_header"
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:drawableEnd="@drawable/ic_edit_btn"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:text="Unknown"
                        android:textAlignment="center"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/unknownHeading2"
                        style="@style/table_header"
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:drawableEnd="@drawable/ic_edit_btn"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:text="Unknown"
                        android:textAlignment="center"
                        tools:ignore="RtlSymmetry" />
                </TableRow>
            </TableLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/table_heading_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                tools:listitem="@layout/item_log" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCSVLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewLog"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:visibility="gone" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/intensityChart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intensity_graph_height"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
